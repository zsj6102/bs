<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/login_bg"
    tools:context="com.ouyiku.bs.ui.login.LoginActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="212px">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/login_img" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="212px"
        android:orientation="horizontal"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:gravity="center"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="20px"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/user_login"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <EditText
            android:id="@+id/phone"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入手机号码"
            android:textColorHint="#cccccc"
            android:textSize="32px"
            />

    </com.zhy.autolayout.AutoLinearLayout>
    <View android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:background="#ffaebb"
        />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:gravity="center"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginLeft="20px"
            >
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/login_pwd"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <EditText
            android:id="@+id/pwd"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入密码"
            android:textColorHint="#cccccc"
            android:textSize="32px"
            android:layout_weight="1" />
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/password"
            android:gravity="center"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginRight="20px"
            >
            <ImageView
                android:id="@+id/pwdView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/password_cover_ico"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <View android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginRight="20px"
        android:layout_marginLeft="20px"
        android:background="#ffaebb"
        />
    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginTop="40px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:text="登录"
        android:textSize="32px"
        android:textColor="#ffffff"
        android:background="@drawable/btnlogin_bg"/>
    <TextView
        android:id="@+id/forgetPwd"
        android:layout_marginTop="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:textSize="32px"
        android:textColor="@color/forgertPwd"
        android:text="@string/login_forget"/>

</com.zhy.autolayout.AutoLinearLayout>
